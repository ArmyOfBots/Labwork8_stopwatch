<Window x:Class="Labwork8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labwork8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <Grid>
        <Button Content="Button" HorizontalAlignment="Left" Margin="167,140,0,0" VerticalAlignment="Top" Width="75" Click="ButtonStartStopwatch"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="167,190,0,0" VerticalAlignment="Top" Width="75" Click="ButtonStopStopWatch"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="167,240,0,0" VerticalAlignment="Top" Width="75" Click="ButtonRestartStopwatch"/>
        <Label x:Name="clocktxt" Content="00:00:00" HorizontalAlignment="Left" Margin="58,140,0,0" VerticalAlignment="Top"/>


    </Grid>
</Window>
